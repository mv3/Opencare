@page
@model Opencare.Pages.Bottles.IndexModel

@{
    ViewData["Title"] = "Index";
}

@Html.ActionLink("Back to previous page", null, null, null, new { href = Request.Headers["Referer"] })

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Bottle[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bottle[0].Ounces)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bottle[0].Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bottle[0].Note)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Bottle)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ounces)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Time)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
