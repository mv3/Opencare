<h4>Administrators</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Administrators[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Administrators[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Administrators[0].UserName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Administrators)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                    <text> | </text>
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a>                    
                    <text> | </text>
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

