@page
@model Opencare.Pages.SignIn.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h4>Parents</h4>

<form asp-controller="Users" asp-action="Index" method="get">
    <div class="col-sm-9">
        <div class="row">
            <div class="pull-right">
                <button type="submit" name="submit" value="Search" class="btn btn-primary">
                    <span class="glyphicon glyphicon-search"></span> Search
                </button>
            </div>
            <div class="pull-right">
                @Html.Editor("search", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Parents[0].FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Parents[0].LastName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Parents)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#signIn">Sign-In</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>

<!-- Trigger the modal with a button -->


<!-- Modal -->
<div id="signIn" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Enter PIN</h4>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="form-group">
                        <label asp-for="UserPIN"></label>
                        <input asp-for="UserPIN" class="form-control" />
                        <span asp-validation-for="UserPIN" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>